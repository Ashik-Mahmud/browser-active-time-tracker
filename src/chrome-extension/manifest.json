{
  "manifest_version": 3,
  "name": "Browser Active Time Tracker",
  "version": "1.0.0",
  "permissions": ["storage", "idle"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "description": "Tracks active browser time.",
  "icons": {
    "16": "public/16.png",
    "32": "public/32.png",
    "48": "public/48.png",
    "192": "public/192.png"
  }
}
